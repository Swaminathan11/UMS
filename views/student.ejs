<%-  include('./partials/header.ejs') %>

<div style="text-align: center;">
    <h1>Add a New student</h1>

    <form action="/stud_to_add" method="POST">
    <label>Enter Student Id</label>
    <input type="text" name="stud_id" required><br><br>
    <label>Enter Student Name</label>
    <input type="text" name="stud_name" required><br><br>
    <label>Enter Student DOB</label>
    <input type="text" name="stud_dob" required><br><br>
    <label>Enter Student Address</label>
    <input type="text" name="stud_address" required><br><br>
    <label>Enter College Id</label>
    <input type="text" name="stud_clg" required><br><br>
    <label>Enter Course id</label>
    <input type="text" name="stud_course" required><br><br>
    <button type="submit">Add</button>
    </form><br><br>
    
    <form action="/stud_to_view" method="POST">
    <label>View Student details by entering id</label>
    <input type="text" name="stud_id_to_view" required><br>
    <button type="submit">View</button>
    </form>
    
    <form action="/stud_to_del" method="POST">
    <label>Delete a student</label>
    <input type="text" name = "stud_id_to_del" required><br>
    <button type="submit">Delete</button>
    </form>
    <br><br>
</div>

